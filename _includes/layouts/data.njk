---
layout: layouts/base.njk
templateClass: tmpl-post
---
<h1>{{ title }}</h1>

{# {%- for tag in tags | filterTagList %}
{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
<a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
{%- endfor %} #}

<link rel="stylesheet" href="{{ '/css/jupyter.css' | url }}">

<div id="post-content">
{{ content | safe }}

<div id='jupyter-notebook'>
{% include "data-posts/{{ data-template }}.njk" %}
</div>

</div>

<div id='post-footer'>
{%- if collections.posts %}
{%- set nextPost = collections.posts | getNextCollectionItem(page) %}
{%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
{%- if nextPost or previousPost %}
<hr>
<ul class='footer-pagination'>
  {%- if nextPost %}<li class="next">Next: <a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a></li>
  {% else %}<li class='flex-filler'></li>{% endif %}
  {%- if previousPost %}<li class="previous">Previous: <a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a></li>
  {% endif %}
</ul>
{%- endif %}
{%- endif %}
</div>
